# Groq API Key (Required)
GROQ_API_KEY=your_groq_api_key_here
# Groq Model (Optional, default is llama-3.1-8b-instant)
GROQ_MODEL=llama-3.1-8b-instant

# LangSmith Tracing (Optional, default is false)
# Set to true to enable LangSmith tracing for monitoring and debugging
# Make sure to set your LangSmith API key in the environment variable LANGSMITH_API_KEY
LANGSMITH_TRACING="true"
LANGSMITH_API_KEY="your_langsmith_api_key_here"

# Azure OpenAI Embeddings Configuration
AZURE_OPENAI_ENDPOINT="https://your-resource-name.openai.azure.com/" # Your Azure OpenAI resource endpoint
AZURE_OPENAI_API_KEY="your_azure_openai_api_key" # Your Azure OpenAI API key
AZURE_OPENAI_API_VERSION="your_api_version" # The API version to use, e.g., "2023-05-15"
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME="your-embedding-deployment-name" # The name of your embedding deployment in Azure