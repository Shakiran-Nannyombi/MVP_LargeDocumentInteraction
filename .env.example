# Groq API Key (Required)
GROQ_API_KEY=your_groq_api_key_here

# LangSmith API Key (Optional - for tracing)
LANGSMITH_API_KEY=your_langsmith_api_key_here

# Enable LangSmith tracing (Optional)
LANGSMITH_TRACING=true

# Directory configurations
DATA_DIR=your_data_directory_here
CHROMA_DB=your_chroma_db_directory_here

# App Settings
CHUNK_SIZE=size_of_chunks_to_process
CHUNK_OVERLAP=overlap_between_chunks
LLM_TEMPERATURE=temperature_for_llm_responses
RETRIEVAL_K=number_of_retrievals_to_perform

# Embedding Model
EMBEDDING_MODEL_NAME=your_embedding_model_name_here